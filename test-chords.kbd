(defcfg
  process-unmapped-keys yes
)

(defvar
  tap-timeout   200
  hold-timeout  200
  tt $tap-timeout
  ht $hold-timeout
)

(defsrc
  a       s       d       f       del
)

(defchords hr-left 500
  ;; left half
  (1        ) a
  (  2      ) s
  (    3    ) d
  (      4  ) f
  (        5) del
  ;; single hrm
  (1       5) lmet
  (  2     5) lalt
  (    3   5) lctl
  (      4 5) lsft
  ;; dual hrm
  (1 2     5) (multi lmet lalt)
  (1   3   5) (multi lmet lctl)
  (1     4 5) (multi lmet lsft)
  (  2 3   5) (multi lalt lctl)
  (  2   4 5) (multi lalt lsft)
  (    3 4 5) (multi lctl lsft)
  ;; triple hrm
  (1 2 3   5) (multi lmet lalt lctl)
  (1 2   4 5) (multi lmet lalt lsft)
  (1   3 4 5) (multi lmet lctl lsft)
  (  2 3 4 5) (multi lalt lctl lsft)
  ;; quadruple hrm - HYPER
  (1 2 3 4 5) (multi lmet lalt lctl lsft)
)
;;(defchords hr-right 500
;;  ;; right half TBD

(defalias
  ;; for home-row-chording
  ;; left half
  met-a (chord hr-left 1)
  alt-s (chord hr-left 2)
  ctl-d (chord hr-left 3)
  sft-f (chord hr-left 4)
  del_  (chord hr-left 5)
  ;; right half TBD
)

(deflayer U_BASE
  @met-a  @alt-s  @ctl-d  @sft-f @del_
)

